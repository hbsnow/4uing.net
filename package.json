{
  "name": "website",
  "version": "2.0.0",
  "repository": "https://github.com/hbsnow/website.git",
  "author": "hbsnow",
  "scripts": {
    "debug:html": "cross-env DEBUG=metalsmith:* node build.js",
    "watch:html": "node build/metalsmith.js --watch",
    "watch:js": "webpack-dev-server --inline --progress --config build/webpack.dev.conf.js",
    "watch:css": "postcss src/css/main.css -o docs/assets/css/main.css --watch",
    "watch": "cross-env NODE_ENV=development npm-run-all -p watch:html watch:js",
    "build:html": "node build/metalsmith.js",
    "build:js": "node build/webpack.js",
    "build:css": "postcss src/css/main.css -o docs/assets/css/main.css --no-map",
    "build": "cross-env NODE_ENV=production npm-run-all -p build:html build:js",
    "gulp:watch": "gulp watch",
    "lint:js": "eslint --ext .js src"
  },
  "dependencies": {
    "autoprefixer": "^7.1.6",
    "babel-eslint": "^8.0.2",
    "babel-loader": "^7.1.2",
    "cross-env": "^5.1.1",
    "doiuse": "^4.0.0",
    "eslint": "^4.11.0",
    "eslint-config-standard": "^10.2.1",
    "eslint-friendly-formatter": "^3.0.0",
    "eslint-loader": "^1.9.0",
    "eslint-plugin-import": "^2.8.0",
    "eslint-plugin-node": "^5.2.1",
    "eslint-plugin-promise": "^3.6.0",
    "eslint-plugin-standard": "^3.0.1",
    "highlightjs": "^9.10.0",
    "htmlnano": "^0.1.6",
    "jstransformer-pug": "^0.2.3",
    "metalsmith": "^2.3.0",
    "metalsmith-branch": "^0.0.5",
    "metalsmith-collection-metadata": "^0.1.0",
    "metalsmith-collections": "^0.9.0",
    "metalsmith-copy": "^0.3.0",
    "metalsmith-debug": "^1.1.0",
    "metalsmith-drafts": "^0.0.1",
    "metalsmith-if": "^0.1.1",
    "metalsmith-in-place": "^3.0.1",
    "metalsmith-json-metadata": "^0.1.0",
    "metalsmith-layouts": "^1.8.1",
    "metalsmith-markdownit": "^0.4.0",
    "metalsmith-posix-path": "^1.1.0",
    "metalsmith-posthtml": "^1.0.0",
    "metalsmith-rename": "^1.0.0",
    "metalsmith-rssfeed": "^0.0.6",
    "metalsmith-watch": "^1.0.3",
    "moment": "^2.19.1",
    "npm-run-all": "^4.1.2",
    "postcss-cli": "^4.1.1",
    "posthtml-inline-assets": "^2.0.0",
    "recursive-escape": "^2.0.1",
    "rlite-router": "^2.0.3",
    "run-sequence": "^2.1.0",
    "stylelint": "^8.2.0",
    "url-join": "^2.0.2",
    "webpack": "^3.8.1",
    "webpack-dev-server": "^2.9.4",
    "webpack-merge": "^4.1.1"
  }
}
