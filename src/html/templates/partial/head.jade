- var page_author = author ? author : site.author
- var page_title = title === site.title ? '' : title + ' | '
- var og_type = title === site.title ? 'website' : 'article'
- var canonical = site.url + path

meta(charset='utf-8')

//- JavaScript
script(rel='stylesheet', src='/scripts/redirect.js', inline)

title(page-title)= page_title + site.title

meta(http-equiv='X-UA-Compatible', content='IE=edge')
meta(name='viewport', content='width=device-width, initial-scale=1')
meta(name='fragment', content='!')

//- URL Base
base(href='/')

//- Data
meta(name='author', content=page_author)
meta(name='description', content=description)
link(rel='canonical', href=canonical)

//- OGP
meta(property='og:type', content=og_type)
meta(property='og:site_name', content=site.title)
meta(property='og:locale', content='ja_JP')
meta(property='og:url', content=canonical)
meta(property='og:title', content=title)
meta(property='og:description', content=description)

//- Twitter Card
meta(name='twitter:card', content='summary')
meta(name='twitter:creator', content='@hbsnow')

//- Icon
link(rel='apple-touch-icon', href='/apple-touch-icon.png', type='image/png')

//- Feed
link(rel='alternate', href='/blog/feed.rss', title=site.title, type='application/rss+xml')

//- CSS
link(rel='stylesheet', src='/styles/critical.css', inline)

noscript
	link(rel='stylesheet', href='/styles/main.css')
